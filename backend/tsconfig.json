{
    "compilerOptions": {
        "target": "es2022",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./dist",
        "allowJs": true,
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "moduleResolution":"node",
        "removeComments": true,
        "baseUrl": "./src",
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}